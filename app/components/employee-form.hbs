<form {{ on "submit" this.validateForm}} class="input-form">
		<div class="input-name">
			<label>Name:</label>
			<input 
				type="text" 
				id="name" 
				class="inp inp-box"
				name="name"
				value={{this.employee.name}}
				placeholder="Enter name"
				required
			> 
		</div>
		<div class="input-gender">
			<label>Gender:</label>
			<PowerSelect 
				@options={{this.genders}}
				@selected={{this.selectedGender}}
				@onChange={{this.selectGender}}
				@placeholder="Select a Gender"
				class="inp"
				required
				as |gender|
			>
				{{gender}}
			</PowerSelect>
		</div>
		<div class="input-email">
			<label>Email:</label>
			<input 
				type="text" 
				id="email" 
				class="inp inp-box"
				name="email"
				value={{this.employee.email}}
				placeholder="Enter email"
				required
			> 
		</div>
		<div class="input-dob">
			<label>Date of Birth:</label>
			<input 
				type="date" 
				id="dob"  
				class="inp inp-box"
				name="dob"
				value={{this.employee.dob}}
				required
			>
		</div>
		<div class="input-address">
			<label>Address:</label>
			<input 
				type="text" 
				id="address"  
				class="inp inp-box"
				name="address"
				value={{this.employee.address}}
				placeholder="Enter address"
				required
			>
		</div>
		<div class="input-country">
			<label>Country:</label>
			<PowerSelect 
				@searchEnabled={{true}}
				@options={{this.countries}}
				@selected={{this.selectedCountry}}
				@onChange={{this.selectCountry}}
				@placeholder="Select a country"
				class="inp"
				required
				as |name|
			>
				{{name}}
			</PowerSelect>
		</div>
		<div class="input-department">
			<label>Department:</label>
			<PowerSelect
				@options={{this.departments}}
				@selected={{this.selectedDepartment}}
				@onChange={{this.selectDepartment}}
				@placeholder="Select Department"
				@triggerClass="inp"
				required
				as |dept|
			>
				{{dept}}
			</PowerSelect>
		</div>
		<div class="input-skills">
			<label>Skills:</label>
			<PowerSelectMultiple
				@options={{this.skills}}
				@selected={{this.selectedSkills}}
				@onChange={{this.selectSkills}}
				@placeholder="Select skills"
				@triggerClass="inp"
				required
				as |skill|
			>
				{{skill}}
			</PowerSelectMultiple>
		</div>
		<div class="input-employment-type">
			<label>Employment Type:</label>
			<div class="radio-group">
				{{#each this.employmentTypes
				 as |type|}}
					<input
							type="radio"
							class="inp"
							name="employmentType"
							value={{type.value}}
        			checked={{eq this.selectedEmploymentType type.value}}
							{{on "change" (fn this.selectEmploymentType type)}}
					>
						{{type.label}}
				{{/each}}
			</div>
		</div>
		<div class="input-salary">
			<label for="salary">Salary:</label>
			<input 
				type="number" 
				id="salary"  
				class="inp inp-box"
				name="salary"
				value={{this.employee.salary}}
				placeholder="Enter salary"
				required
			>
		</div>
		<div class="button-group">
			<div>
				<button type="submit" class="add-btn">
					{{if this.args.isEdit "Update" "Add"}} Employee
				</button>
			</div>
			<div>
				{{#if this.args.isEdit}}
					<LinkTo @route="view" class="cancel-btn" {{ on-key "Escape" this.toView}}>
						Cancel <span>[Esc]</span>                    
					</LinkTo>
				{{else}}
					<LinkTo @route="index" class="cancel-btn" {{ on-key "Escape" this.toIndex}}>
						Cancel <span>[Esc]</span>                    
					</LinkTo>
				{{/if}}
			</div>
		</div>
	</form>